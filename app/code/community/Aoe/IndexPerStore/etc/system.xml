<config>
    <sections>
        <aoe_indexperstore translate="label" module="aoe_indexperstore">
            <class>separator-top</class>
            <label>AOE Index Management</label>
            <tab>advanced</tab>
            <frontend_type>text</frontend_type>
            <sort_order>2000</sort_order>
            <show_in_default>1</show_in_default>
            <groups>
                <options translate="label" module="aoe_indexperstore">
                    <label>Enable/Disable Index</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <fields>
                        <product_attributes translate="label" module="aoe_indexperstore">
                            <label>Enable Product Attributes Index</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_attributes>
                        <catalog_url_rewrites translate="label" module="aoe_indexperstore">
                            <label>Enable Catalog URL Rewrites</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </catalog_url_rewrites>
                        <category_flat translate="label" module="aoe_indexperstore">
                            <label>Enable Category Flat Index</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>400</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </category_flat>
                        <product_flat translate="label" module="aoe_indexperstore">
                            <label>Enable Product Flat Index</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>500</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_flat>
                        <category_product translate="label" module="aoe_indexperstore">
                            <label>Enable Catalog Category/Product Index</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>600</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </category_product>
                        <fulltext translate="label" module="aoe_indexperstore">
                            <label>Enable Catalog Search Index</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>700</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </fulltext>
                        <product_price_and_stock translate="label" module="aoe_indexperstore">
                            <label>Enable Price and Stock Index</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>800</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_price_and_stock>
                        <tag_summary translate="label" module="aoe_indexperstore">
                            <label>Enable Tag Aggregation Data Index</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>800</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </tag_summary>
                    </fields>
                </options>
            </groups>
        </aoe_indexperstore>
    </sections>
</config>
